# EditorConfig configuration file.
# Please see http://editorconfig.org for details

# Top-most EditorConfig file
root = true

# Default configuration for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# formats with a lot of indent
[**.{yml,yaml}]
indent_size = 2
